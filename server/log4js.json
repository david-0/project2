{
  "appenders": [
    {
      "type": "console",
      "layout": {
        "type": "pattern",
        "pattern": "%d [%[%-5p%]] %c - %m"
      }
    },
    {
      "type": "dateFile",
      "filename": "logs/homeautomation.log",
      "pattern": "-yyyyMMdd",
      "alwaysIncludePattern": false,
      "layout": {
        "type": "pattern",
        "pattern": "%d [%-5p] %c - %m"
      }
    }
  ],
  "levels": {
    "[all]": "INFO",
    "GenericDataController": "INFO",
    "GenericSocket": "INFO"
  }
}
